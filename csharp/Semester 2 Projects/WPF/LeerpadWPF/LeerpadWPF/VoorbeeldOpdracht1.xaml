<Window x:Class="LeerpadWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeerpadWPF"
        mc:Ignorable="d"
        Title="Hallo World!" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="NaamTextBox" HorizontalAlignment="Left" Height="23" Margin="78,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="GroetButton" Content="Groet" HorizontalAlignment="Left" Margin="236,33,0,0" VerticalAlignment="Top" Width="75" Click="GroetButton_Click"/>
        <Label x:Name="BoodschapLabel" Content="Hallo wereld" HorizontalAlignment="Left" Margin="394,30,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="NederlandRadioButton" Content="Nederlands" HorizontalAlignment="Left" Margin="78,86,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="EngelsRadioButton" Content="Engels" HorizontalAlignment="Left" Margin="78,118,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="HoofdlettersCheckBox" Content="Hoofdletters" HorizontalAlignment="Left" Margin="72,160,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
